{
  "manifest_version": 3,
  "name": "Element Text Extractor",
  "version": "1.1", // Increment version
  "description": "Click an element to extract text parts, or press 'c' to toggle code copy mode.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "downloads",
    "clipboardWrite" // <-- ADD THIS PERMISSION
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Extract Text from Element"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}